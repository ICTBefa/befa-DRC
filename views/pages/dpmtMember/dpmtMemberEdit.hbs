<link rel="stylesheet" href="/assets/dist/css/printTable.css"/>
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <a href="/dpmtMemberList" class="btn btn-primary"> Back </a>
                    <br><br>
                    <h1 class="m-0 text-dark"> <b>{{title}}</b></h1>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                          <form action="/EditDpmtMember" method="post" role="form">
                            <div class="form-group">
                                <label>Divisi</label>
                                <select name="department" class="form-control">
                                {{#select data.department_id}}    
                                {{#each dataDepartment}}
                                <option value="{{this.id}}"> {{this.kode_department}} - {{this.nama_department}} </option>
                                {{/each}}
                                {{/select}}
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Roles</label>
                                <select name="role" class="form-control">
                                {{#select data.department_roles_id}}
                                {{#each dataRole}}
                                <option value="{{this.id}}"> {{this.role_name}} </option>
                                {{/each}}
                                {{/select}}
                                </select>
                            </div>                            
                            <div class="form-group">
                                <label>User</label>
                                <select name="user" class="form-control">
                                {{#select data.user_id}}
                                {{#each dataUser}}
                                <option value="{{this.id}}"> {{this.username}} - {{this.email}} </option>
                                {{/each}}
                                {{/select}}
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Status</label>
                                <select name="status" class="form-control">
                                {{#select data.active}}    
                                <option value="1">Aktif</option>
                                <option value="0">Tidak Aktif</option>
                                {{/select}}
                                </select>
                            </div>
                            <input type="hidden" class="form-control" name="dpmt_member_id" value="{{data.id}}">
                            <input type="submit" class="btn btn-primary" ></input>
                        </form>  
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

{{#section 'custom_script'}}
    <script>
        $('#dataTables').DataTable({
        "paging": true,
        "lengthChange": false,
        "searching": true,
        "ordering": true,
        "autoWidth": false,
        "pageLength": 25
        });

    </script>
{{/section}}
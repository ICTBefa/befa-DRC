<link rel="stylesheet" href="/assets/dist/css/printTable.css"/>
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <a href="/reminderList" class="btn btn-primary"> Back </a>
                    <br><br>
                    <h1 class="m-0 text-dark"> <b>{{title}}</b></h1>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                          <form action="/EditReminder" method="post" role="form">
                            <div class="form-group">
                                <label>Group Reminder</label>
                                <select name="reminderId" class="form-control">
                                {{#select data.reminder_id}}    
                                {{#each dataReminder}}
                                <option value="{{this.id}}"> {{this.reminder_type}} </option>
                                {{/each}}
                                {{/select}}
                                </select>
                            </div>                           
                            <div class="form-group">
                                <label>Before After</label>
                                <select name="beforeAfter" class="form-control">
                                {{#select data.beforeAfter}}
                                <option value="B"> Before </option>
                                <option value="A"> After </option>
                                {{/select}}
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Days</label>
                                <input type="number" class="form-control" name="days" placeholder="Input Days" required value="{{data.days}}">
                            </div>
                            <div class="form-group">
                                <label>Status</label>
                                <select name="status" class="form-control">
                                {{#select data.active}}    
                                <option value="1">Aktif</option>
                                <option value="0">Tidak Aktif</option>
                                {{/select}}
                                </select>
                            </div>
                            <input type="hidden" class="form-control" name="reminder_list_id" value="{{data.id}}">
                            <input type="submit" class="btn btn-primary" ></input>
                        </form>  
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

{{#section 'custom_script'}}
    <script>
        $('#dataTables').DataTable({
        "paging": true,
        "lengthChange": false,
        "searching": true,
        "ordering": true,
        "autoWidth": false,
        "pageLength": 25
        });

    </script>
{{/section}}